<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackOrWhite"
    android:orientation="vertical"
    tools:context=".media.presentation.fragment.MediaLibraryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/o_16dp"
            android:layout_marginTop="@dimen/o_12dp"
            android:layout_marginBottom="@dimen/o_12dp"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:text="@string/MediaLibrary"
            android:textColor="@color/whiteOrBlack"
            android:textSize="@dimen/o_22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackOrWhite"
        app:tabIndicatorColor="@color/whiteOrBlack"
        app:tabRippleColor="@color/whiteOrBlack"
        app:tabTextAppearance="@style/TabStyle"
        app:tabTextColor="@color/whiteOrBlack" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/o_0dp"
        android:layout_weight="1" />

</LinearLayout>