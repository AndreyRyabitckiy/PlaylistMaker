<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonMainMenu" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_height">@dimen/o_0dp</item>
        <item name="android:layout_marginStart">@dimen/o_16dp</item>
        <item name="android:layout_marginEnd">@dimen/o_16dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/o_22sp</item>
        <item name="cornerRadius">@dimen/o_12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/o_8dp</item>
        <item name="iconTint">@android:color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ButtonSettings">
        <item name="android:layout_width">@dimen/o_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/o_20dp</item>
        <item name="android:layout_marginBottom">@dimen/o_20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/o_16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/whiteOrBlack</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="LinearSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="ImageSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/o_12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/greyOrWhite</item>
    </style>

    <style name="BackButton">
        <item name="android:tint">@color/whiteOrBlack</item>
        <item name="android:foregroundGravity">right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/back_ic</item>
        <item name="android:layout_marginStart">@dimen/o_12dp</item>
        <item name="android:layout_marginEnd">@dimen/o_12dp</item>
        <item name="android:layout_marginTop">@dimen/o_12dp</item>
        <item name="android:layout_marginBottom">@dimen/o_12dp</item>
    </style>

    <style name="TopText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginTop">@dimen/o_12dp</item>
        <item name="android:layout_marginBottom">@dimen/o_12dp</item>
        <item name="android:layout_marginStart">@dimen/o_16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/whiteOrBlack</item>
        <item name="android:textSize">@dimen/o_22sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="playerText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/o_13sp</item>
    </style>

    <style name="playerTextAnswer">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/whiteOrBlack</item>
        <item name="android:textSize">@dimen/o_13sp</item>
    </style>

    <style name="ButtonSmall">
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="Checker">
        <item name="thumbTint">@color/greyOrBlue</item>
        <item name="trackTint">@color/greyOrBlue1</item>
    </style>

    <style name="ButtonPlayer">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/o_0dp</item>
        <item name="android:insetLeft">@dimen/o_0dp</item>
        <item name="android:insetTop">@dimen/o_0dp</item>
        <item name="android:insetRight">@dimen/o_0dp</item>
        <item name="android:insetBottom">@dimen/o_0dp</item>
    </style>

    <style name="TabStyle">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/o_14dp</item>
    </style>

</resources>